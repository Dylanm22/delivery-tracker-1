<a href="/users/edit">Edit profile</a>
<a href="/users/sign_out">Sign out</a>
<hr>

<div>
  <div>
    <h1>
      Delivery Tracker
    </h1>
    <div>
      <p>Know if something gets lost in the mail.</p>
    </div>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Expecting a package?
    </h2>

    <form action="/insert_delivery" method="post">
      <div>
        <label for="description_box">
          Description
        </label>

        <input type="text" id="description_box" name="query_description">
      </div>

      <div>
        <label for="arrival_box">
          Supposed to arrive on
        </label>

        <input type="date" id="arrival_box" name="query_arrival">
      </div>

      <div>
        <label for="details_box">
          Details
        </label>

        <textarea id="details_box" name="query_details" rows="3"></textarea>
      </div>

      <button>
        Log delivery
      </button>
    </form>
  </div>
</div>
<style>
  .waiting_on{

  background-color: lightyellow;
   }

   .received{

  background-color: lightgreen;
   }
</style>

<!---->

<div class="waiting_on">
  <!---->
  <h2>Waiting on</h2>

  <%@list_of_deliveries.where(:arrive => false).each do |a_delivery| %>

    <li>

      <ul>
        <div><%= a_delivery.description %></div>

        Supposed to arrive on <%= a_delivery.arrival %>

        <div>
        </div>

        <%= a_delivery.details %>
        <div>
        </div>
        <form action="/modify_delivery/<%=a_delivery.id%>" method="post">
          <input type="hidden" name="arrived" value="true">
          <button>Mark as received</button>
        </ul>
      </li>
    <%end%>
  </div>
  <hr>

  <div class="received">
    <h2>Received</h2>

    <%@list_of_deliveries.each do |a_delivery| %>

      <li>

        <ul>
          <div><%= a_delivery.description %></div>

          Supposed to arrive on <%= a_delivery.created_at %>

          <div>
          </div>

          <%= a_delivery.details %>
          <div>
          </div>
           <a href="/delete_delivery/<%=a_delivery.id%>">Delete</a>
          </ul>
        </li>
      <%end%>
    </div>
